<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:contentViews="clr-namespace:AppDuolingoClone.ContentViews"
    x:Class="AppDuolingoClone.ContentViews.LessonGroupBonusContentView"
>
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1" />
                <Setter Property="BackgroundColor" Value="#dfe0e0" />
                <Setter Property="Margin" Value="0,15" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout>
            <BoxView />

            <FlexLayout
                Direction="Row"
                HeightRequest="180"
                BindableLayout.ItemsSource="{Binding Lessons}"
                AlignItems="Center"
                JustifyContent="Center"
            >
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <contentViews:BonusContentView />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <BoxView />
        </StackLayout>
    </ContentView.Content>
</ContentView>
