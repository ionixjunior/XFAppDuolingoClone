<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppDuolingoClone.Views.TitleViews.StoreTitleView"
>
    <ContentView.Content>
        <Grid
            Margin="{OnPlatform Android='0,0,15,0', iOS='0'}"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="1"
                Text="Loja"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FontSize="Large"
                TextColor="#b0afaf"
            />

            <StackLayout
                Grid.Column="2"
                Orientation="Horizontal"
            >
                <Image
                    Source="navbar_diamont.png"
                    HeightRequest="40"
                />

                <Label
                    Text="204"
                    VerticalTextAlignment="Center"
                    FontSize="Large"
                    TextColor="#de5c56"
                />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>
